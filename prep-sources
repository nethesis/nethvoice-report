#!/bin/bash


#
# Clean old versions
#
rm -rf dist/ui.tar.gz
rm -rf dist/api
rm -rf dist/tasks

#
# Build UI
#
pushd ui
rm -rf dist/
npm install
npm run build
tar cvzf ui.tar.gz -C dist .
cp ui.tar.gz ../dist/
popd

#
# Build API
#
pushd api
unset GOPATH
GO111MODULE=on
go build
cp api ../dist/
popd

#
# Build Tasks
#
pushd tasks
unset GOPATH
GO111MODULE=on
go build
cp tasks ../dist/
popd
